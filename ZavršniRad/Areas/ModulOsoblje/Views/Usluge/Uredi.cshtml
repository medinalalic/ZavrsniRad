@using ZavršniRad.Areas.ModulOsoblje.Models;
@model ZavršniRad.Areas.ModulOsoblje.Models.UslugeUrediVM
@{
    ViewBag.Title = "Uredi";
    Layout = null;
}
@using (Html.BeginForm("Snimi", "Usluge", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.Id);
    <br /><br />
    <div class="row">
        @if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary(string.Empty, new { @class = "text-danger" });

        }

        <div class="col-md-2">

            <label class="control-label">@Html.DisplayNameFor(m => m.Vrsta)</label>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Vrsta, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Vrsta, string.Empty, new { @class = "text-danger" })
            </div>


        </div>
     
                <img id="blah" style="width:100px;height:100px;" alt="UslugeImg" src='@Url.Action("Show", "Usluge", new { id = Model.Id })' />
           

        <div class="col col-md-12">
            <div class="form-group">
                <input type="submit" value="Spasi" class="btn btn-info" style="width:115px;height:45px;" />
            </div>
        </div>
    </div>

}

